<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <h1>All chats:</h1>
    <form method="GET" action="chats/new">
        <button type="submit" id="btn--newChat">New Chat</button>
    </form>
    <% for(chat of chats){ %>
        <div class="chat">
            <p>From: <%= chat.from %></p>
            <div class="msg">
                <p>Message: <%= chat.msg %></p>
                <form method="GET" action="/chats/<%=chat.id %>/edit">
                    <button>Edit</button>
                </form>
            </div>
            <p>to: <%= chat.to %></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0 , 4).join("-") %></p>
            <% let update = chat.updated_at %>
            <% if(update) { %>
                <p id="edited">Edited: <%= update.toString().split(" ").slice(0 , 5).join("-") %></p>
            <% } %>
            <form method="POST" action="/chats/<%= chat.id%>?_method=DELETE">
                <BUtton class="delete">DELETE</BUtton>
            </form>
        </div>
        <br>
    <% } %>
</body>
</html>